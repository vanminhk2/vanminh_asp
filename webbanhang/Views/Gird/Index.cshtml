@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<webbanhang.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    /* Set the style for the a tag */
    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
        border: 1px solid red;
    }
        /* set the style for the active class */
        .pagination a.active {
            background-color: dodgerblu;
            color: red;
            display: inline-block;
            width: 40px;
            height: 48px;
            border: 1px solid red;
        }
        /* add background color when user hovers on inactive class */
        .pagination a:hover:not(.active) {
            background-color: #ffd800;
            display: inline-block;
            width: 40px;
            height: 48px;
            border: 1px solid #00ffff;
        }
</style>
<section class="section-content padding-y">
    <div class="container">
        <nav class="row">
            <div class="row row-sm">
                @foreach (var item in Model)
                {
                    <div class="col-xl-4 col-lg-3 col-md-4 col-6  ">


                        <div class="card card-sm card-product-grid">
                            <a href="@Url.Action("Detail", "Products", new {Id = item.Id })" class="img-wrap">
                                <img src="~/Content/images/items/@item.Avatar">
                            </a>

                            <div class="info-wrap">
                                <a class="title accent-blue">@item.Name</a>
                                <div class="price mt-1">$@item.Price</div>
                            </div>
                        </div>
                    </div> <!-- col.// -->
                }
            </div>


        </nav> <!-- row.// -->

    </div> <!-- container .//  -->
</section>
